@model IEnumerable<WordrobeMVC.Models.Outfit>

@{
    ViewBag.Title = "Index";
}

<h1 class="page-header">Outfits</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.TopsID)</h3>
                    <img="" />
                    <p>@Html.DisplayNameFor(model => model.BottomsID) : @Html.DisplayFor(modelItem => item.BottomsID)</p>
                    <p>@Html.ActionLink("Details", "Details", new { id = item.ShoesID }, new { @class = "btn btn-primary", role = "button" })</p>
                    @*<p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>*@
                </div>
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = item.OutfitsID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.OutfitsID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.OutfitsID })
                </p>
            </div>
        </div>
    }
</div>

